{% if accordionSections %}
	<div class="accordion-container" data-size="wide">
		{% for section in accordionSections %}
			<section>
				<h4>
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z"/>
					</svg>
					{{section.sectionTitle}}</h4>
				{% if section.panelItems  %}
					<ul class="accordion">
						{% for panel in section.panelItems %}
							<li class="panel">
								<button class="panel-trigger bold" type="button" aria-expanded="false" aria-controls="content-{{ loop.index }}">
									<span>

										{{ panel.panelTitle|e }}
									</span>
								</button>
								<div class="panel-content" aria-hidden="true" id="content-{{ loop.index }}">
									<div class="panel-inner">
										{{ panel.panelContent|e('wp_kses_post') }}
									</div>
								</div>
							</li>
						{% endfor %}
					</ul>
				{% endif %}


			</section>

		{% endfor %}
	</div>
</ul>{% endif %}
